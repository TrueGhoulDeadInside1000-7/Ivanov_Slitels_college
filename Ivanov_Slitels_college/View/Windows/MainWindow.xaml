<Window x:Class="Ivanov_Slitels_college.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ivanov_Slitels_college.View.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Button x:Name="AddGroupPages" Content="Добавить группу" Grid.Column="0" Grid.Row="1" Background="White" FontSize="20" Click="AddGroup_Click"/>
            <Button x:Name="AddActivityPage" Content="Добавить активность" Grid.Column="0" Grid.Row="3" Background="White" FontSize="20" Click="AddActivity_Click"/>
            <Button x:Name="JournalPage" Content="Учёт" Grid.Column="0" Grid.Row="5" Background="White" FontSize="20" Click="Journal_Click"/>
            <Button x:Name="Report1Page" Content="Отчет 1" Grid.Column="0" Grid.Row="7" Background="White" FontSize="20" Click="Report1_Click"/>
            <Button x:Name="Report2Page" Content="Отчет 2" Grid.Column="0" Grid.Row="9" Background="White" FontSize="20" Click="Report2_Click"/>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Visible" Grid.Column="1"/>
    </Grid>
</Window>
