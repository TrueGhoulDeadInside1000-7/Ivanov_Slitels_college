<Page x:Class="Ivanov_Slitels_college.View.Page.AddActivityPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ivanov_Slitels_college.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddActivityPage1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите активность"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" FontWeight="Bold"/>
        <TextBox FontSize="15" Name="ActivityTb" Grid.Row="1" Grid.Column="2" BorderBrush="Black" Margin="0,0,10,0" />

        <TextBlock Text="Выберите направление"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" FontWeight="Bold"/>
        <ComboBox Name="DirectionCmb" FontSize="15" Grid.Column="2" Grid.Row="3" Margin="0,0,10,0"/>

        <Button Name="Add1Tb" Content="Добавить" Click="Add1Tb_Click"  FontWeight="SemiBold"
                FontSize="20" Grid.Column="2" Grid.Row="6" Margin="0,0,10,0" Height="60" Width="300"/>
    </Grid>
</Page>
