<Page x:Class="Ivanov_Slitels_college.View.Page.AddGroupPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ivanov_Slitels_college.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddGroupPage1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите группу"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" FontWeight="Bold"/>
        <TextBox FontSize="15" Name="GroupTb" Grid.Row="1" Grid.Column="2" BorderBrush="Black" Margin="0,0,10,0" />

        <TextBlock Text="Выберите специальность"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" FontWeight="Bold"/>
        <ComboBox Name="SpecialCmb" FontSize="15" Grid.Column="2" Grid.Row="3" Margin="0,0,10,0"/>

        <Button Name="AddTb" Click="AddTb_Click" Content="Добавить" FontWeight="SemiBold" FontSize="20" 
                Grid.Column="2" Grid.Row="6" Margin="0,0,10,0" Height="60" Width="300"/>
    </Grid>
</Page>
