<Page x:Class="Ivanov_Slitels_college.View.Page.ReportPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ivanov_Slitels_college.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--#region Текст-->

        <TextBlock Text="Выберите начало периода" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2" Text="Выберите конец периода" FontSize="24" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--#endregion-->

        <!--#region Календари-->
        <DatePicker Name="DateStartDp" Grid.Row="1" Width="300"/>
        <DatePicker Name="DateFinishDp" Grid.Row="1" Grid.Column="2" Width="300"/>
        <!--#endregion-->


        <DataGrid Name="ReportDg" Grid.Row="4" Grid.Column="3" AutoGenerateColumns="False">

        </DataGrid>

        <Button Name="ChooseBtn" Content="Выбрать" Grid.Column="3" Grid.Row="6" 
                FontSize="20" Margin="60 10" Click="ChooseBtn_Click"/>

    </Grid>
</Page>
