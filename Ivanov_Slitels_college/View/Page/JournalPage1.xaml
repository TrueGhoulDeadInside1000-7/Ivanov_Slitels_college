<Page x:Class="Ivanov_Slitels_college.View.Page.JournalPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ivanov_Slitels_college.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JournalPage1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
            <RowDefinition  Height="1*"/>
        </Grid.RowDefinitions>

        <ListView Name="JournalLv" Grid.ColumnSpan="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding DateEvent, StringFormat=dd.MM.yyyy}" />
                    <GridViewColumn Header="Группа" DisplayMemberBinding="{Binding Group.Name}" />
                    <GridViewColumn Header="Специальность" DisplayMemberBinding="{Binding Group.Special.Name}" />
                    <GridViewColumn Header="Активность" DisplayMemberBinding="{Binding Activity.Name}" />
                    <GridViewColumn Header="Направление" DisplayMemberBinding="{Binding Activity.Direction.Name}" />
                    <GridViewColumn Header="Балл" DisplayMemberBinding="{Binding Mark}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Text="Выберите специальность" Grid.Row="4" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Text="Выберите направление" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Text="Выберите группу" Grid.Row="6" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Text="Выберите активность" Grid.Column="3" Grid.Row="6" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Text="Введите балл" Grid.Row="8" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Text="Выберите дату" Grid.Row="2" HorizontalAlignment="Center" FontSize="24"/>

        <DatePicker Text="Выбор даты" Grid.Row="2" Grid.Column="3" Name="DateEventDp" Margin="0 0 10 0"/>
        <ComboBox Grid.Row="5" Name="SpecialCmb" Margin="10 7 0 0"/>
        <ComboBox Grid.Column="3" Grid.Row="5" Name="DirectionCmb" Margin="0 7 10 0"/>
        <ComboBox Grid.Column="7" Grid.Row="7" Name="ActivityCmb" Margin="0 7 10 2"/>
        <ComboBox Grid.Row="7" Name="GroupCmb" Margin="10 7 0 0"/>
        <TextBox Grid.Row="8" Grid.Column="1" Name="MarkTb" Margin="5 0 5 0"/>
        <Button Name="AddBtn" Content="Добавить" Grid.Row="8" Grid.Column="2" 
                Width="150" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="AddBtn_Click"/>



    </Grid>
</Page>
