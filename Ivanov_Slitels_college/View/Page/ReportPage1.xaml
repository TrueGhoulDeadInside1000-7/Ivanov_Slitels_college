<Page x:Class="Ivanov_Slitels_college.View.Page.ReportPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ivanov_Slitels_college.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--#region Текст-->

        <TextBlock Text="Выберите начало периода" FontSize="24" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2" Text="Выберите конец периода" FontSize="24" HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Text="Выберите группу" FontSize="24" HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>

        <!--#endregion-->

        <!--#region Календари-->
        <DatePicker Name="DateStartDp" Grid.Row="1" Width="300"/>
        <DatePicker Name="DateFinishDp" Grid.Row="1" Grid.Column="2" Width="300"/>
        <!--#endregion-->

        <ComboBox Name="GroupCmb" Grid.Column="2" Grid.Row="2" Margin="100 10"/>

        <DataGrid Name="ReportDg" Grid.Row="4" Grid.ColumnSpan="3" AutoGenerateColumns="False">
            <DataGridTextColumn Header="Дата" Binding="{Binding DateEvent, StringFormat=dd.MM.yyyy}"/>
            <DataGridTextColumn Header="Группа" Binding="{Binding Group.Name}"/>
            <DataGridTextColumn Header="Специальность" Binding="{Binding Group.Special.Name}"/>
            <DataGridTextColumn Header="Активность" Binding="{Binding Activity.Name}"/>
            <DataGridTextColumn Header="Направление" Binding="{Binding Activity.Direction.Name}"/>
            <DataGridTextColumn Header="Балл" Binding="{Binding Mark}"/>
        </DataGrid>

        <Button Name="ChooseBtn" Content="Выбрать" Grid.Row="7" FontSize="20" Margin="30 10" Click="ChooseBtn_Click"/>

    </Grid>
</Page>
